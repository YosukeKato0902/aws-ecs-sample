project_name = "ecs-web-app"
environment  = "prd"
region       = "ap-northeast-1"

vpc_cidr           = "10.2.0.0/16"
availability_zones = ["ap-northeast-1a", "ap-northeast-1c"]

app_port          = 8080
health_check_path = "/health"

# 本番用ACM証明書ARN (必須)
certificate_arn = "arn:aws:acm:ap-northeast-1:ACCOUNTID:certificate/CERTIFICATE_ID"

